<div class="mt-4">
  <h3>Upload Food List</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Tên món ăn">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" class="form-control" id="description" name="description" placeholder="Mô tả ngắn gọn"></textarea>
    </div>

    <div class="form-group">
      <label for="price">Price(VND)</label>
      <input type="text" class="form-control" id="price" name="price" placeholder="">
    </div>

    <div class="form-group upload-img3">
      <div class="upload-img4">
          <label for="level">Thêm hình ảnh:</label> 
      </div>
      <div class="upload-img-border">
          <div class="file btn btn-lg btn-primary upload-img">
              <span class="oi oi-data-transfer-upload"></span>
              Upload
              <input class="upload-img2" type="file" name="file"/>
          </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Thêm món ăn</button>
  </form>
</div>