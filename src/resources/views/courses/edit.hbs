<div class="mt-4">
  <h3>Sửa món ăn</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" value="{{dish.name}}" id="name" name="name">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description">{{dish.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="price">Price(VND)</label>
      <input type="text" class="form-control" value="{{dish.price}}" id="price" name="price">
    </div>

    <div class="form-group">
      <label for="level">Level video</label>
      <input type="text" class="form-control" value="{{dish.level}}" id="level" name="level">
    </div>
    <button type="submit" class="btn btn-primary">Lưu video</button>
  </form>
</div>